{
	"name": "planner",
	"private": true,
	"workspaces": [
		".",
		"apps/*"
	],
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"dev:desktop": "concurrently -k \"npm run dev\" \"npm --workspace planner-desktop run dev\"",
		"build": "next build",
		"start": "next start",
		"type-check": "tsc --noEmit",
		"lint": "next lint",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install",
		"test": "vitest run",
		"test:watch": "vitest",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:install": "playwright install",
		"lh:ci": "npx -y lighthouse http://localhost:3000 --quiet --budgets-path=./lighthouse-budgets.json --only-categories=performance --chrome-flags=\"--headless=new\"",
		"sec:audit": "npm audit --audit-level=high || true"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"dexie": "^3.2.4",
		"nanoid": "^5.0.7",
		"next": "^14.2.5",
		"next-pwa": "^5.6.0",
		"papaparse": "^5.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"zustand": "^4.5.2"
	},
	"devDependencies": {
		"concurrently": "^9.0.1",
		"@axe-core/playwright": "^4.9.0",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@playwright/test": "^1.46.0",
		"@testing-library/jest-dom": "^6.4.6",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^20.12.12",
		"@types/papaparse": "^5.3.16",
		"@types/react": "^18.2.66",
		"@types/react-dom": "^18.2.22",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.2.5",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.11",
		"jsdom": "^24.1.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.3.2",
		"turbo": "^2.0.6",
		"typescript": "~5.4.5",
		"vitest": "^1.6.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"*.{js,jsx,ts,tsx,css,md,json}": [
			"prettier --write"
		]
	}
}
